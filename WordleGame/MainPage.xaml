            </Frame>
        </Grid>
        <Grid>

        </Grid>
        <!-- User input -->
        <VerticalStackLayout HorizontalOptions="Center">
            <!-- Customized entry keyboard -->
            <Entry x:Name="UserGuess" Placeholder="Answer" WidthRequest="100" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" IsVisible="False" IsEnabled="False" ClearButtonVisibility="WhileEditing" MaxLength="5" TextTransform="Uppercase" TextColor="Gray">
                <Entry.Keyboard>
                    <Keyboard x:FactoryMethod="Create">
                        <x:Arguments>
                            <KeyboardFlags>CapitalizeCharacter</KeyboardFlags>
                        </x:Arguments>
                    </Keyboard>
                </Entry.Keyboard>
            </Entry>
            <!--  Buttons -->
            <Button x:Name="StartButton" Clicked="Start_OnClicked" Text="Start" MaximumWidthRequest="150" Margin="10"></Button>
            <Button x:Name="GuessButton" Clicked="GuessButton_OnClicked" Text="Guess" MaximumWidthRequest="150" Margin="10" IsVisible="False" IsEnabled="False"></Button>
            <Button x:Name="ResetButton" Clicked="ResetButton_OnClicked" Text="Reset" MaximumWidthRequest="150" Margin="10" IsVisible="False" IsEnabled="False"></Button>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>

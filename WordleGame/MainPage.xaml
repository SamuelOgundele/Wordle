                <Label Text="" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="20"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="Black" Padding="0" BorderColor="#3A3A3C" CornerRadius="0">
                <Label Text="" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="20"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="Black" Padding="0" BorderColor="#3A3A3C" CornerRadius="0">

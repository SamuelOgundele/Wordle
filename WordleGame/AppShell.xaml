<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordleGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordleGame" 
    Shell.FlyoutBehavior="Disabled">
    <!--TabBar navigation-->
    <TabBar>
        <Tab Title="Wordle" Icon="game.png">
            <ShellContent Title="Wordle" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="About" Icon="about.png">
            <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" Route="AboutPage" />
        </Tab>
        <Tab Title="Stats" Icon="stats.png">
            <ShellContent Title="Stats" ContentTemplate="{DataTemplate local:StatsPage}" Route="StatsPage" />
        </Tab>
        <Tab Title="Settings" Icon="settings.png">
            <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>  